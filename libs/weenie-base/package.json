{
  "name": "@wymp/weenie-base",
  "version": "1.1.0",
  "description": "This is the base package for Weenie, an unopinionated, fluent, traditional Typescript dependency injector.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -Rf dist || true",
    "docs:gen": "typedoc src/index.ts --sort source-order",
    "docs:view": "pnpx http-server -o docs",
    "format": "pnpm prettier:fix && pnpm lint:fix",
    "lint": "eslint src/**/* tests/**/*",
    "lint:fix": "pnpm lint --fix",
    "prepack": "pnpm clean && pnpm build && pnpm docs:gen",
    "prepare": "husky install",
    "prettier": "prettier src tests *.cjs --check",
    "prettier:fix": "pnpm prettier --write",
    "test": "pnpm typecheck && pnpm prettier && pnpm lint && jest",
    "typecheck": "tsc --noEmit"
  },
  "author": "Kael Shipman<kael.shipman@gmail.com>",
  "license": "ISC",
  "repository": "https://github.com/wymp/weenie-base.git",
  "keywords": [
    "typescript",
    "microservices",
    "framework",
    "dependency injection",
    "dependency injector"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.25.4",
    "typescript": "^4.9.5 || ^5.2.2"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5"
  },
  "jest": {
    "roots": [
      "<rootDir>/tests"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
