{
  "name": "@wymp/weenie-base",
  "version": "1.0.1",
  "description": "This is the base package for Weenie, an unopinionated, fluent, traditional Typescript dependency injector.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "docgen": "npx typedoc src/index.ts --sort source-order",
    "tsc": "tsc",
    "test": "jest",
    "prepublishOnly": "rm -Rf dist; npx tsc && npm run docgen",
    "prepare": "husky install"
  },
  "author": "Kael Shipman<kael.shipman@gmail.com>",
  "license": "ISC",
  "repository": "https://github.com/wymp/weenie-base.git",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "husky": "^8.0.0",
    "jest": "^29.4.3",
    "prettier": "^2.8.4",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^29.0.5",
    "typedoc": "^0.23.26",
    "typescript": "^4.9.5"
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/tests"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
