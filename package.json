{
  "name": "@wymp/weenie-base",
  "version": "0.4.1",
  "description": "This is the base package for Weenie, an unopinionated, fluent, traditional Typescript dependency injector.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "tsc": "tsc",
    "test": "jest",
    "prepublishOnly": "rm -Rf dist; npx tsc"
  },
  "author": "Kael Shipman<kael.shipman@gmail.com>",
  "license": "ISC",
  "repository": "https://github.com/wymp/weenie-base.git",
  "dependencies": {
    "@types/node": "^10.17.50",
    "@wymp/ts-simple-interfaces": "^0.5.0",
    "fs": "^0.0.1-security",
    "runtypes": "^4.3.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "husky": "^1.3.1",
    "jest": "^24.9.0",
    "prettier": "^1.16.0",
    "pretty-quick": "^1.10.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.9.7 || ^4.0.0"
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/tests"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
