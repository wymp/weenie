{
  "name": "@wymp/weenie-monorepo",
  "version": "1.2.0",
  "description": "A proof of concept for a monorepo using pnpm and typescript",
  "private": true,
  "engines": {
    "pnpm": "^8",
    "node": "20"
  },
  "scripts": {
    "build": "pnpm build:libs",
    "build:libs": "pnpm --filter './libs/*' build",
    "check": "pnpm -r check",
    "clean": "pnpm -r clean",
    "docs:gen": "pnpm -r docs:gen",
    "docs:view": "./scripts/.internal/docs-view.sh",
    "format": "pnpm -r format",
    "pkgjson": "./scripts/.internal/pkgjson.sh",
    "preinstall": "npx only-allow pnpm",
    "publish:all": "./scripts/.internal/publish-all.sh",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r typecheck",
    "version:bump": "./scripts/.internal/version-bump.sh"
  },
  "keywords": [],
  "author": "Kael Shipman",
  "license": "ISC",
  "dependencies": {
    "@eslint/eslintrc": "3.0.0",
    "@eslint/js": "8.56.0",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.11",
    "@types/node": "20.11.5",
    "@typescript-eslint/eslint-plugin": "6.19.0",
    "@typescript-eslint/parser": "6.19.0",
    "@wymp/simple-db-mysql": "^0.8.1 || ^0.9.0",
    "@wymp/simple-http-client-fetch": "^0.8.1 || ^0.9.0",
    "@wymp/simple-http-server-express": "^0.8.1 || ^0.9.0",
    "@wymp/simple-logger-console": "^0.8.1 || ^0.9.0",
    "@wymp/simple-pubsub-amqp": "^0.9.0",
    "@wymp/ts-simple-interfaces": "^0.8.0 || ^0.9.0",
    "@wymp/ts-simple-interfaces-testing": "^0.9.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "express": "4.18.2",
    "jest": "29.7.0",
    "nodemon": "3.0.3",
    "prettier": "3.2.4",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.2",
    "typedoc": "^0.25.7",
    "typescript": "5.3.3",
    "vite": "5.0.12"
  },
  "pnpm": {
    "overrides": {
      "@types/express": "$@types/express",
      "@types/jest": "$@types/jest",
      "@types/node": "$@types/node",
      "@wymp/simple-db-mysql": "$@wymp/simple-db-mysql",
      "@wymp/simple-http-client-fetch": "$@wymp/simple-http-client-fetch",
      "@wymp/simple-http-server-express": "$@wymp/simple-http-server-express",
      "@wymp/simple-logger-console": "$@wymp/simple-logger-console",
      "@wymp/simple-pubsub-amqp": "$@wymp/simple-pubsub-amqp",
      "@wymp/ts-simple-interfaces": "$@wymp/ts-simple-interfaces",
      "@wymp/ts-simple-interfaces-testing": "$@wymp/ts-simple-interfaces-testing"
    }
  }
}
